<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BMReceiverTextView">
        <attr name="autoZoom" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BMSimpleSeekBar">
        <attr name="lineColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="seekBar" format="reference"/>
        <attr name="raduis" format="dimension"/>
        <attr name="margin_line" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MaterialCircleView">

        <attr name="bGradient" format="boolean"></attr>
        <attr name="circleColor" format="color"></attr>
        <attr name="circleWidth" format="dimension"></attr>
        <attr name="radius" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="MaxScrollViewStyle">
        <attr name="maxHeight" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="SVCircleProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="max" format="integer"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>